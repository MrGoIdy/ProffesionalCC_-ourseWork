                                {
                                    if (c.Count > 0)
                                    {
                                foreach (var consultation in c)
                                {
                                    counter++;
                                    @consultation.Time
                                        <center>


                                            @Html.ActionLink(consultation.Name, "Consultation", new
                                   {
                                       id = consultation.Id

                                   })
                                        </center>
                                        <br />
