@model ProfessionConsultantCenter.Models.Consultation
@{
    ViewBag.Title = "Регистрация консультации";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>


<body style="background-image:url(http://www.psychologos.ru/uploads/tests/64v5/4a63qpme.jpg);">
    @using (Html.BeginForm("AddConsultation", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Создайте свой аккаунт для начала работы с нашим консультант-центром</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Название", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(m => m.Adres, "Адрес(аудитория)", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Adres, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Adres)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.Time, "Время", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Time)
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.Date, "Дата проведения (ГГГГ, ММ, ДД)", new { @class = "control-label col-md-3" })

            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Date, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.Places, "Количество мест", new { @class = "control-label col-md-3" })

            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Places, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Places)
            </div>
        </div>

            <input data-val="true" data-val-length="Поле Name должно иметь строковое значение, максимальная длина которого — 600." data-val-length-max="600" id="Role_Name" name="Role.Name" type="hidden" value="User">
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" class="btn btn-default" value="Добавить консультацию" />
                </div>
            </div>
    }
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




