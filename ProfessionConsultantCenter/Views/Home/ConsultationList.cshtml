@using ProfessionConsultantCenter.Models
@using System.Collections.Generic
@model IEnumerable<Consultation>
@if (Model.Count() != 0)
{
    <div style="background-color:rgba(255, 255, 255,0.4)">
    <H2>Список консультаций:</H2>      
            <table border="1">               
                    <tr>
                        <th>
                            <center>
                                Дата
                             </center>
                        </th>
                        <th>
                            <center>
                                Название
                            </center>
                        </th>
                        <th><center>Адрес</center>
                        </th>
                        <th><center>Занятость</center>
</th>
                        <th>
                            
                        </th>
                    </tr>
                    
                    @foreach (var consultation in Model)
                    {
                        <tr>
                            <td>
                                    @consultation.Date.ToShortDateString() @consultation.Time
                            </td>
                            <td>
                                <center>
                                @consultation.Name
                                </center>
                            </td>
                            <td style="text-align:right">
                                @consultation.Adres
                            </td>
                            <td style="text-align:right">
                                @{ int usersCount = consultation.Users.Count(x => x.Role.Name == "User");}
                                @usersCount / @consultation.Places
                            </td>
                            <td style="text-align:center">
                                <a href="RemoveConsultation?consultationId=@consultation.Id"><font size="2">Удалить</font></a>
                            </td>
                        </tr>


                                    }

</table>
      
</div>
                                    }